@model OneClickDelivery.Website.ViewModels.MenuSectionViewModel

@{
    ViewBag.Title = "Create";
}

@Html.Partial("../Shared/AlertMessage",Model.Message)

<div class="card-box">
    <h2>Insert a new Menu Type</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.MenuTypeId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.MenuTypeId, Model.MenuTypes,"Select a Menu Type",new { @class = "form-control" } )
                    @Html.ValidationMessageFor(model => model.MenuTypeId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Insert a new Menu Type" class="btn btn-success" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
